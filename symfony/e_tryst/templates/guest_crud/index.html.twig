{% extends 'base.html.twig' %}

{% block title %}Guest index{% endblock %}

{% block body %}
    <h1>Guest index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Email</th>
                <th>Birthday</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for guest in guests %}
            <tr>
                <td>{{ guest.id }}</td>
                <td>{{ guest.name }}</td>
                <td>{{ guest.surname }}</td>
                <td>{{ guest.email }}</td>
                <td>{{ guest.birthday ? guest.birthday|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('guest_crud_show', {'id': guest.id}) }}">show</a>
                    <a href="{{ path('guest_crud_edit', {'id': guest.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('guest_crud_new') }}">Create new</a>
{% endblock %}
