{% extends 'base.html.twig' %}

{% block title %}Tryst index{% endblock %}

{% block body %}
    <h1>Tryst index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Title</th>
                <th>Topic</th>
                <th>Day</th>
                <th>Hour</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tryst in trysts %}
            <tr>
                <td>{{ tryst.id }}</td>
                <td>{{ tryst.name }}</td>
                <td>{{ tryst.title }}</td>
                <td>{{ tryst.topic }}</td>
                <td>{{ tryst.day ? tryst.day|date('Y-m-d') : '' }}</td>
                <td>{{ tryst.hour ? tryst.hour|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('tryst_crud_show', {'id': tryst.id}) }}">show</a>
                    <a href="{{ path('tryst_crud_edit', {'id': tryst.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tryst_crud_new') }}">Create new</a>
{% endblock %}
