{% extends 'base.html.twig' %}

{% block title %}Commodity index{% endblock %}

{% block body %}
    <h1>Commodity index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Name</th>
                <th>Batch</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commodity in commodities %}
            <tr>
                <td>{{ commodity.id }}</td>
                <td>{{ commodity.code }}</td>
                <td>{{ commodity.name }}</td>
                <td>{{ commodity.batch }}</td>
                <td>
                    <a href="{{ path('commodity_show', {'id': commodity.id}) }}">show</a>
                    <a href="{{ path('commodity_edit', {'id': commodity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('commodity_new') }}">Create new</a>
{% endblock %}
